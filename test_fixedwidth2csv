#!/bin/sh
set -eu

input=$(cat <<-'EOF'
col1     col2  col3
hellllo  oh    cool 
col1  col2      col3
hello cool ess  nice 
EOF
)

expected=$(mktemp)
cat <<EOF > "$expected"
hellllo<|>oh<|>cool
hello<|>cool ess<|>nice
EOF

actual=$(mktemp)
echo "$input" | ./fixedwidth2csv -d '<|>' -c 'col1' -c 'col2' -c 'col3' > "$actual"

diff "$actual" "$expected"
